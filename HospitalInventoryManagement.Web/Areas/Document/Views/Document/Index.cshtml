@model IEnumerable<HospitalInventoryManagement.Data.Models.FollowDocument>
@{
    ViewData["Title"] = "Evrak Listesi";
    Layout = "~/Areas/Document/Views/Shared/_Layout.cshtml";
}

<h2>Evrak Listesi</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Kod</th>
            <th>Konu</th>
            <th>Kategori</th>
            <th>Tarih</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var document in Model)
        {
            <tr>
                <td>@document.Code</td>
                <td>@document.Subject</td>
                <td>@document.Category?.Description</td>
                <td>@document.Date.ToString("dd.MM.yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("AddDocument", "Document", new { area = "Document" })" class="btn btn-primary">Evrak Ekle</a>