@model IEnumerable<HospitalInventoryManagement.Data.Models.Cariler>

@{
    ViewData["Title"] = "Cari Listesi";
    Layout = "~/Areas/Invoice/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Cari Listesi</h2>

    <!-- Cari Tablosu -->
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>Cari Kodu</th>
                    <th>Unvan</th>
                    <th>Cari Grubu</th>
                    <th>İl</th>
                    <th>İlçe</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cari in Model)
                {
                    <tr>
                        <td class="fw-bold">@cari.CariKodu</td>
                        <td>@cari.Unvan</td>
                        <td>@cari.CariGrubu?.GrupAdi</td>
                        <td>@cari.Il</td>
                        <td>@cari.Ilce</td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a class="btn btn-info btn-sm me-2" href="/Invoice/Cari/Details/@cari.Id">
                                    <i class="bi bi-eye"></i> Detaylar
                                </a>
                                <form asp-action="Delete" asp-route-id="@cari.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                        <i class="bi bi-trash"></i> Sil
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
