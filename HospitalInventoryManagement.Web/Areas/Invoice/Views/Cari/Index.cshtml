@model IEnumerable<HospitalInventoryManagement.Data.Models.Cariler>

@{
    ViewData["Title"] = "Cari Listesi";
    Layout = "~/Areas/Invoice/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <h2>Cari Listesi</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Cari Kodu</th>
                <th>Unvan</th>
                <th>Cari Grubu</th>
                <th>Kapanış Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cari in Model)
            {
                <tr>
                    <td>@cari.CariKodu</td>
                    <td>@cari.Unvan</td>
                    <td>@cari.CariGrubu?.GrupAdi</td>
                    <td>@(cari.KapanisTarihi.HasValue ? cari.KapanisTarihi.Value.ToString("dd.MM.yyyy") : "Belirtilmemiş")</td>
                    <td>
                        <a class="btn btn-info btn-sm" onclick="window.location.href='/Invoice/Cari/Details/@cari.Id';">Detaylar</a>
                        <form asp-action="Delete" asp-route-id="@cari.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>