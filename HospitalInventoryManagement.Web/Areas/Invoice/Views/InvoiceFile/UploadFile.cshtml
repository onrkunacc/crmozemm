
@{
    ViewData["Title"] = "Dosya Yükle";
    Layout = "~/Areas/Invoice/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Dosya Yükle</h2>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="UploadFile" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="CariId" class="form-label">Cari:</label>
            <select id="CariId" name="cariId" class="form-control" required>
                <option value="">Cari Seçiniz</option>
                @foreach (var cari in ViewBag.Cariler)
                {
                    <option value="@cari.Id">@cari.Unvan</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="Year" class="form-label">Yıl:</label>
            <select id="Year" name="year" class="form-control" required>
                <option value="">Yıl Seçiniz</option>
                @foreach (var year in ViewBag.Years)
                {
                    <option value="@year">@year</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="File" class="form-label">Dosya:</label>
            <input type="file" id="File" name="file" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Yükle</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>

