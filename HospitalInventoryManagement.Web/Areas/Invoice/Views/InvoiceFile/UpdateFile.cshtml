@model HospitalInventoryManagement.Web.Areas.Invoice.Models.ViewModels.UpdateFileViewModel
@{
    ViewData["Title"] = "UpdateFile";
    Layout = "~/Areas/Invoice/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Dosya Güncelle</h2>
    <hr />

    <!-- Başarı ve Hata Mesajları -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="UpdateFile" method="post">
        <input type="hidden" name="cariId" value="@Model.CariId" />
        <input type="hidden" name="year" value="@Model.Year" />
        <input type="hidden" name="fileName" value="@Model.FileName" />

        <div class="mb-3">
            <label for="Tarih" class="form-label">Tarih:</label>
            <input type="text" name="parameters[Tarih]" class="form-control" placeholder="Güncellenmiş Tarih Girin" />
        </div>

        <div class="mb-3">
            <label for="FaturaNo" class="form-label">Fatura No:</label>
            <input type="text" name="parameters[FaturaNo]" class="form-control" placeholder="Güncellenmiş Fatura Numarası Girin" />
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a asp-action="Index" asp-route-cariId="@Model.CariId" asp-route-year="@Model.Year" class="btn btn-secondary">İptal</a>
    </form>
</div>

